<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/customerCount">
        <service class="Evozon\Api\Api\CustomerCountInterface" method="getCustomerCount"/>
        <resources>
            <resource ref="Evozon_Api::api"/>
        </resources>
    </route>
    <route method="POST" url="/V1/orderComplete/:orderId">
        <service class="Evozon\Api\Api\OrderCompleteInterface" method="execute"/>
        <resources>
            <resource ref="Evozon_Api::api"/>
        </resources>
    </route>
    <route method="POST" url="/V1/customerAvatarUpload/">
        <service class="Evozon\Api\Api\AvatarUploadInterface" method="upload"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route method="GET" url="/V1/customerAvatarRetrieve/">
        <service class="Evozon\Api\Api\AvatarUploadInterface" method="retrieve"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
